{
  "compilerOptions": {
    "target": "ES2020",          // or another ECMAScript version
    "module": "CommonJS",        // Set module system
    "outDir": "./dist",          // Output directory for compiled JavaScript files
    "rootDir": "./src",          // Directory for TypeScript files
    "esModuleInterop": true,     // To enable interoperability between ES and CommonJS modules
    "strict": true,              // Enable all strict type-checking options
    "skipLibCheck": true         // Skip library checks for faster builds
  },
  "include": ["src/**/*"],       // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]    // Exclude node_modules folder
}
